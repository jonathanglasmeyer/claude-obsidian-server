{
  "name": "discord-claude-bot",
  "version": "1.0.1",
  "type": "module",
  "scripts": {
    "start": "node bot.js",
    "dev": "rm -f bot.log && unbuffer bun --watch bot.js 2>&1 | tee bot.log",
    "logs": "ssh hetzner 'cd ~/obsidian-bridge-server && docker compose logs -f discord-bot'",
    "logs:tail": "ssh hetzner 'cd ~/obsidian-bridge-server && docker compose logs --tail 50 discord-bot'",
    "status": "ssh hetzner 'cd ~/obsidian-bridge-server && docker compose ps'",
    "health": "ssh hetzner 'curl -s http://localhost:3001/health | python3 -m json.tool'",
    "health:local": "curl -s http://localhost:3001/health | jq",
    "cleanup": "ssh hetzner 'curl -X POST -s http://localhost:3001/admin/cleanup-threads | python3 -m json.tool'",
    "cleanup:local": "curl -X POST -s http://localhost:3001/admin/cleanup-threads | jq"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.9",
    "discord.js": "^14.15.3",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "ioredis": "^5.3.2",
    "redis": "^4.6.0"
  }
}
